{% extends 'base.html.twig' %}

{% block title %}WWF | Search{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('build/search.css') }}">
{% endblock %}

{% block body %}
	{% block topbar %}
		{{ parent() }}
	{% endblock %}
	{% block content %}
		{{ parent() }}
		<div class="wrapper wrapper-search">
			<div class="main-content">
				<div class="no-result">
					Sorry, we haven't found any result for your search. <br />
					Please try again.
				</div>
				<a href="{{ path('home') }}" class="cta">
					Back to home
				</a>
			</div>
		</div>
	{% endblock %}

	{% block footer %}
		{{ parent() }}
	{% endblock %}
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script src="{{ asset('build/search.js') }}"></script>
{% endblock %}
